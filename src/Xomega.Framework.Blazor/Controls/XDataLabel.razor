@inherits XComponent

@if (IsVisible)
{
    <div class="@Class">
        @if (ShowLabel)
        {
            <label class="form-label" accesskey="@GetAccessKey()" for="@ControlId">@GetLabel(Label)</label>
        }
        <input type="text" id="@ControlId" readonly class="form-control-plaintext"
               value="@(Property?.GetStringValue(ValueFormat.DisplayString, Row))" />
    </div>
}

@code {
    protected override void OnInitialized()
    {
        ObservedChanges = PropertyChange.Value + PropertyChange.Visible;
    }
}